@{
    ViewData["Title"] = "Student Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Student Management</h1>
        <a href="@Url.Action("Import", "Student", new { area = "Admin" })" class="btn btn-primary">
            <i class="fas fa-file-upload me-2"></i>Upload Placement List
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-users me-2"></i>Placed Students
            </h6>
        </div>
        <div class="card-body">
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5>No Students Found</h5>
                <p class="text-muted">Upload a placement list to see students placed at your school.</p>
                <a href="@Url.Action("Import", "Student", new { area = "Admin" })" class="btn btn-primary">
                    <i class="fas fa-file-upload me-2"></i>Upload Placement List
                </a>
            </div>
        </div>
    </div>
</div>