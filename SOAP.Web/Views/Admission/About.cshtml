@{
    ViewData["Title"] = "About SOAP - Smart Online Admission Portal";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4 mb-3">About SOAP</h1>
                <p class="lead text-muted">Smart Online Admission Portal - Bridging the gap between NEMIS placement and school onboarding</p>
            </div>

            <div class="row mb-5">
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-lightbulb fa-3x text-primary mb-3"></i>
                            <h4>Our Mission</h4>
                            <p>To digitize and streamline the post-NEMIS placement admission process for Kenyan secondary schools, making it easier for parents and schools.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-users fa-3x text-success mb-3"></i>
                            <h4>Who We Serve</h4>
                            <p>Parents completing their children's admission requirements and school administrators managing the admission process efficiently.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-5">
                <h2 class="h3 mb-4">How SOAP Works</h2>
                <div class="row">
                    <div class="col-md-3 mb-4">
                        <div class="text-center">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <span class="h4 mb-0">1</span>
                            </div>
                            <h5>Verify KCPE</h5>
                            <p class="small text-muted">Enter your child's KCPE Index Number to verify placement</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="text-center">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <span class="h4 mb-0">2</span>
                            </div>
                            <h5>Complete Form</h5>
                            <p class="small text-muted">Fill out student bio-data and parent information online</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="text-center">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <span class="h4 mb-0">3</span>
                            </div>
                            <h5>Upload Documents</h5>
                            <p class="small text-muted">Submit required documents (KCPE slip, birth certificate, medical form)</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="text-center">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <span class="h4 mb-0">4</span>
                            </div>
                            <h5>Get Approved</h5>
                            <p class="small text-muted">Receive approval and admission slip via SMS</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-light rounded p-4 mb-5">
                <h3 class="h4 mb-3">Benefits of Using SOAP</h3>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Skip long queues on reporting day</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Complete admission from anywhere</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Real-time SMS notifications</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Secure document upload</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Track application status</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Digital admission slip</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <h3 class="h4 mb-3">Ready to Get Started?</h3>
                <p class="mb-4">Begin your child's admission process today</p>
                <a href="@Url.Action("Index", "Admission")" class="btn btn-primary btn-lg">
                    <i class="fas fa-arrow-right me-2"></i>Start Application
                </a>
            </div>
        </div>
    </div>
</div>