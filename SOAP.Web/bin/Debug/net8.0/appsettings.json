{
  "ConnectionStrings": {
    "DefaultConnection": "Server=OWUORVINY;Database=SOAP_Database;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true;Encrypt=false"
  },
  "Security": {
    "DataProtection": {
      "ApplicationName": "SOAP.Web",
      "KeyLifetime": "90"
    },
    "Authentication": {
      "OtpExpiryMinutes": 5,
      "MaxOtpAttempts": 3,
      "OtpLength": 6,
      "SessionTimeoutMinutes": 20,
      "MaxConcurrentSessions": 1
    },
    "FileUpload": {
      "MaxFileSizeMB": 2,
      "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png"],
      "AllowedMimeTypes": ["application/pdf", "image/jpeg", "image/png"],
      "SecureStoragePath": "wwwroot/uploads/documents"
    },
    "RateLimiting": {
      "LoginMaxRequests": 5,
      "LoginWindowMinutes": 15,
      "OtpMaxRequests": 3,
      "OtpWindowMinutes": 5,
      "UploadMaxRequests": 10,
      "UploadWindowMinutes": 1
    }
  },
  "Sms": {
    "Provider": "AfricasTalking",
    "ApiKey": "",
    "Username": "",
    "SenderId": "SOAP",
    "DeliveryReports": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SOAP.Web.Security": "Information"
    }
  },
  "AllowedHosts": "*"
}
